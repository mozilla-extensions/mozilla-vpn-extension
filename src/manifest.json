{
    "manifest_version": 2,
    "version": "1.0",
    "author": "Mozilla",
    "name": "Mozilla VPN Web Extension (TODO Localize)",
    "description": "Mozilla VPN",

    "applications": {
      "gecko": {
        "id": "vpn@mozilla.com",
        "strict_min_version": "91.1.0"
      }
    },

    "homepage_url": "https://vpn.mozilla.org",

    "background": {
      "persistent": true,
      "scripts": [
        "background/main.js"
      ],
      "type": "module"
    },

    "browser_action": {
      "default_area": "navbar",
      "default_icon": "assets/logos/logo-dark.svg",
      "default_popup": "popup/popup.html",
      "default_title": "Mozilla VPN",
      "theme_icons": [{
        "dark": "assets/logos/logo-dark.svg",
        "light": "assets/logos/logo-light.svg",
        "size": 32
      }]
    },

    "icons": {
      "48": "assets/logos/logo-dark.svg"
    },

    "incognito": "spanning"
}
